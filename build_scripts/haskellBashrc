alias pyser='python -m SimpleHTTPServer'

function rebu
{
    find . -type f -name '*.hs' | xargs ls | entr sh -c 'echo;echo;echo;echo;echo;ghcjs -DGHCJS_GC_INTERVAL=60000 Main.hs; echo done'
}

export PATH=$HOME/.local/bin:$PATH


## from https://nixos.org/nixpkgs/manual/#users-guide-to-the-haskell-infrastructure

function gonix 
{
    nix-shell -p "haskellPackages.ghcWithPackages (pkgs: [pkgs.aeson pkgs.HTTP pkgs.http-conduit pkgs.ghcid])"
}

## nix-env -f "<nixpkgs>" -qaP -A haskellPackages
